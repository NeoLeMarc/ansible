- hosts: debian
  remote_user: root
  tasks:
  - name: create etc.tar
    shell: tar -c /etc -f /etc.tar 

  - name: fetch etc.tar
    fetch: src=/etc.tar dest=~/infrastructure/{{ansible_hostname}}/etc-{{ ansible_hostname }}.tar flat=yes

  - name: cleanup etc.tar
    file: path=/etc.tar state=absent 
